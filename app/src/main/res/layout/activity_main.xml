<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.albertfernie.m8_json.MainActivity"
    android:background="#012345">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#789ABC"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/glUser">

        <TextView
            android:text="Login: "
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/tvLogin" />

        <EditText
            android:id="@+id/etLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:background="#FFFFFF"
            android:ems="10"
            android:inputType="text|textPersonName"
            android:text="" />

        <TextView
            android:text="Password: "
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:id="@+id/tvPassword"
            android:layout_row="1"
            android:layout_column="0" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="#FFFFFF"
            android:ems="10"
            android:inputType="text|textPersonName"
            android:text="" />

    </GridLayout>

    <Button
        android:id="@+id/btAccept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/glUser"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Accept"
        android:onClick="cifrar"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/btAccept"
        android:background="#789ABC">

        <TextView
            android:text="SHA1: "
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/tvSha" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etSha"
            android:background="#FFFFFF"/>

        <TextView
            android:text="MD5: "
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:id="@+id/tvMd5"
            android:layout_row="1"
            android:layout_column="0" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etMd5"
            android:background="#FFFFFF"/>

        <TextView
            android:text="JSON:        "
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginLeft="5dp"
            android:id="@+id/tvJson"
            android:layout_row="2"
            android:layout_column="0" />

        <EditText
            android:id="@+id/etJson"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:layout_marginLeft="5dp"
            android:background="#FFFFFF"
            android:editable="false"
            android:ems="10"
            android:inputType="textPersonName"
            tools:editable="false" />

    </GridLayout>
</RelativeLayout>
